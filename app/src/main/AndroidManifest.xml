<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cryse.lkong" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:name=".application.LKongApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LKongDroidTheme.Light" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SignInActivity"/>
        <activity android:name=".ui.ForumActivity"/>
        <activity android:name=".ui.PostListActivity"/>
        <activity android:name=".ui.NewPostActivity"/>
        <activity android:name=".ui.NewThreadActivity"/>
        <activity android:name=".ui.SettingsActivity"/>
        <activity android:name=".ui.NotificationActivity"/>
        <activity android:name=".ui.PhotoViewPagerActivity"/>
        <activity
            android:name=".ui.SearchActivity"
            android:label="">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.UserProfileActivity"
            android:theme="@style/LKongDroidTheme.Light.Translucent"
            android:label=""/>
        <service android:name=".service.SendPostService"/>
        <service android:name=".service.CheckNoticeService"/>

        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService" >
        </service>
        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
    </application>

</manifest>
