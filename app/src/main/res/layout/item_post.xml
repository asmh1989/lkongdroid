<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_item_post_cardview_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/default_card_radius"
    app:cardElevation="@dimen/default_card_elevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <org.cryse.lkong.widget.PostItemView
        android:id="@+id/recyclerview_item_post_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recyclerview_item_post_imageview_avatar"
            android:layout_width="@dimen/size_avatar_default"
            android:layout_height="@dimen/size_avatar_default" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp">
            <ImageButton
                android:id="@+id/recyclerview_item_post_button_rate"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_button_rate"
                android:contentDescription="@string/button_share"
                android:background="?selectableItemBackground"
                android:tag="tint_text_primary"/>

            <TextView
                android:id="@+id/recyclerview_item_post_textview_rate"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="48dp"
                android:layout_marginLeft="44dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:background="?selectableItemBackground"
                />
        </FrameLayout>


        <ImageButton
            android:id="@+id/recyclerview_item_post_button_replay"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_button_comment"
            android:contentDescription="@string/button_reply"
            android:background="?selectableItemBackground"
            android:tag="tint_text_primary" />

        <ImageButton
            android:id="@+id/recyclerview_item_post_button_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_action_share"
            android:contentDescription="@string/button_share"
            android:background="?selectableItemBackground"
            android:tag="tint_text_primary"/>

        <ImageButton
            android:id="@+id/recyclerview_item_post_button_edit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_button_edit"
            android:contentDescription="@string/button_edit"
            android:visibility="invisible"
            android:background="?selectableItemBackground"
            android:tag="tint_text_primary"/>
    </org.cryse.lkong.widget.PostItemView>
</android.support.v7.widget.CardView>