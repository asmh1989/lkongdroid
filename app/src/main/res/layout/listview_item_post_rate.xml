<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/listview_item_post_rate_textview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder"
        android:textColor="?theme_text_color_primary"
        android:textSize="@dimen/text_size_subhead" />

    <TextView
        android:id="@+id/listview_item_post_rate_textview_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="placeholder"
        android:textColor="?theme_text_color_primary"
        android:textSize="@dimen/text_size_subhead" />

    <TextView
        android:id="@+id/listview_item_post_rate_textview_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview_item_post_rate_textview_username"
        android:text="placeholder"
        android:textColor="?theme_text_color_secondary"
        android:textSize="@dimen/text_size_subhead" />
</RelativeLayout>