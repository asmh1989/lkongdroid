<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/theme_card_bg_color"
    app:cardCornerRadius="@dimen/default_card_radius"
    app:cardElevation="@dimen/default_card_elevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <org.cryse.lkong.widget.PostItemView
        android:id="@+id/recyclerview_item_post_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recyclerview_item_post_imageview_avatar"
            android:layout_width="@dimen/size_avatar_default"
            android:layout_height="@dimen/size_avatar_default" />
    </org.cryse.lkong.widget.PostItemView>
    <ImageButton
        android:id="@+id/recyclerview_item_post_button_overflow"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_item_overflow"
        android:tint="?theme_text_color_primary"/>
</android.support.v7.widget.CardView>