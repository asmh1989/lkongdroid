<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="?attr/theme_card_bg_color"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground">

        <RelativeLayout
            android:id="@+id/author_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/recyclerview_item_post_imageview_author_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                app:border_color="@android:color/transparent"
                app:border_width="0dp"
                app:shadow="false" />

            <LinearLayout
                android:id="@+id/author_text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="72dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/recyclerview_item_post_textview_author_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?theme_text_color_primary"
                    android:textSize="@dimen/text_size_subhead"
                    android:text="placeholder"/>

                <TextView
                    android:id="@+id/recyclerview_item_post_textview_dateline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?theme_text_color_secondary"
                    android:textSize="@dimen/text_size_body1"
                    android:text="placeholder"/>
                </LinearLayout>
            <TextView
                android:id="@+id/recyclerview_item_post_textview_ordinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="?theme_text_color_secondary"
                android:textSize="@dimen/text_size_caption"
                android:text="# 1 Floor"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_container">

            <org.cryse.lkong.utils.htmltextview.HtmlTextView
                android:id="@+id/recyclerview_item_post_textview_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="?theme_text_color_primary"
                android:textSize="@dimen/text_size_subhead"
                android:lineSpacingMultiplier="1.3"
                android:text="placeholder"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/control_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_container">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:text="Rate"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackground"
                android:text="Reply"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>