<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    app:cardBackgroundColor="?attr/theme_card_bg_color"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground">

        <org.cryse.lkong.widget.PostItemView
            android:id="@+id/recyclerview_item_post_view_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/recyclerview_item_post_button_rate"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/recyclerview_item_post_view_item"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/recyclerview_item_post_button_replay"
            android:background="?selectableItemBackground"
            android:drawableLeft="@drawable/ic_button_rate"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/button_rate" />

        <Button
            android:id="@+id/recyclerview_item_post_button_replay"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/recyclerview_item_post_view_item"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:background="?selectableItemBackground"
            android:drawableLeft="@drawable/ic_button_reply"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/button_reply" />

    </RelativeLayout>
</android.support.v7.widget.CardView>