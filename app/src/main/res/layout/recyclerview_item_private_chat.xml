<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyclerview_item_private_chat_relative_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">
    <ImageView
        android:id="@+id/recyclerview_item_private_chat_imageview_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">


        <TextView
            android:id="@+id/recyclerview_item_private_chat_textview_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/recyclerview_item_private_chat_textview_dateline"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="placeholder"
            android:textColor="?theme_text_color_primary"
            android:textSize="@dimen/text_size_subhead" />
        <TextView
            android:id="@+id/recyclerview_item_private_chat_textview_dateline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="placeholder"
            android:gravity="end"
            android:textColor="?theme_text_color_secondary"
            android:textSize="@dimen/text_size_caption"/>
        <TextView
            android:id="@+id/recyclerview_item_private_chat_textview_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview_item_private_chat_textview_username"
            android:text="placeholder"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?theme_text_color_secondary"
            android:textSize="@dimen/text_size_body1"/>
        </RelativeLayout>
</RelativeLayout>