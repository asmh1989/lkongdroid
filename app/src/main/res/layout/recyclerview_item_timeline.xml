<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_item_timeline_cardview_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/theme_card_bg_color"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground">

        <ImageView
            android:id="@+id/recyclerview_item_timeline_imageview_author_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/recyclerview_item_timeline_textview_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="16dp"
            android:text="placeholder"
            android:textColor="?theme_text_color_primary"
            android:textSize="@dimen/text_size_subhead" />

        <TextView
            android:id="@+id/recyclerview_item_timeline_textview_dateline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview_item_timeline_textview_author_name"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:text="placeholder"
            android:textColor="?theme_text_color_secondary"
            android:textSize="@dimen/text_size_body1" />

        <org.cryse.lkong.utils.htmltextview.JellyBeanSpanFixTextView
            android:id="@+id/recyclerview_item_timeline_textview_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="72dp"
            android:lineSpacingMultiplier="1.3"
            android:text="placeholder"
            android:textColor="?theme_text_color_primary"
            android:textSize="@dimen/text_size_subhead" />

        <RelativeLayout
            android:id="@+id/secondary_message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview_item_timeline_textview_message"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?theme_card_divier_color" />

            <org.cryse.lkong.utils.htmltextview.JellyBeanSpanFixTextView
                android:id="@+id/recyclerview_item_timeline_secondary_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="17dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="1"
                android:text="placeholder"
                android:textColor="?theme_text_color_secondary"
                android:textSize="@dimen/text_size_subhead" />

            <org.cryse.lkong.utils.htmltextview.JellyBeanSpanFixTextView
                android:id="@+id/recyclerview_item_timeline_third_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerview_item_timeline_secondary_message"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="1dp"
                android:lineSpacingMultiplier="1.3"
                android:text="placeholder"
                android:textColor="?theme_text_color_primary"
                android:textSize="@dimen/text_size_subhead" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>