<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_item_thread_relative_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">
    <com.pkmmte.view.CircularImageView
        android:id="@+id/recyclerview_item_thread_imageview_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:border_color="@android:color/transparent"
        app:border_width="0dp"
        app:shadow="false" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/recyclerview_item_thread_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/recyclerview_item_thread_textview_notice1"
            android:text="placeholder"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="?theme_text_color_primary"
            android:textSize="@dimen/text_size_subhead"/>
        <TextView
            android:id="@+id/recyclerview_item_thread_textview_notice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/recyclerview_item_thread_textview_title"
            android:text="25680"
            android:gravity="end"
            android:textColor="?theme_text_color_secondary"
            android:textSize="@dimen/text_size_caption"/>

        <TextView
            android:id="@+id/recyclerview_item_thread_textview_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview_item_thread_textview_title"
            android:layout_toLeftOf="@+id/recyclerview_item_thread_textview_notice2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="placeholder"
            android:textColor="?theme_text_color_secondary"
            android:textSize="@dimen/text_size_body1" />
        <TextView
            android:id="@+id/recyclerview_item_thread_textview_notice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/recyclerview_item_thread_textview_secondary"
            android:text="placeholder"
            android:gravity="end"
            android:textColor="?theme_text_color_secondary"
            android:textSize="@dimen/text_size_caption"/>
        </RelativeLayout>
</RelativeLayout>