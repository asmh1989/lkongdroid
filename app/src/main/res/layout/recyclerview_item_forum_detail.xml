<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/recyclerview_item_forum_imageview_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:foreground="?selectableItemBackground"/>

    <TextView
        android:id="@+id/recyclerview_item_forum_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:text="placeholder"
        android:textColor="?theme_text_color_primary"
        android:textSize="@dimen/text_size_subhead" />

    <TextView
        android:id="@+id/recyclerview_item_forum_textview_secondary"
        android:layout_below="@+id/recyclerview_item_forum_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:text="placeholder"
        android:textColor="?theme_text_color_secondary"
        android:textSize="@dimen/text_size_body1" />
</RelativeLayout>