<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?selectableItemBackground">
    <TextView
        android:id="@+id/recyclerview_item_search_post_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="?theme_text_color_primary"
        android:textSize="@dimen/text_size_subhead" />
    <TextView
        android:id="@+id/recyclerview_item_search_post_secondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?theme_text_color_secondary"
        android:textSize="@dimen/text_size_body1" />
</LinearLayout>