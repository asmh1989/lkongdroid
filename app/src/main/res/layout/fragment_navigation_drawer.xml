<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?theme_navigation_drawer_bg"
    android:orientation="vertical"
    tools:context=".NavigationDrawerFragment">

    <RelativeLayout
        android:id="@+id/left_drawer_account_container"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="?attr/theme_navigation_drawer_top_drawable"
        android:paddingTop="24dp">
        <com.pkmmte.view.CircularImageView
            android:id="@+id/account_imageview_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_default_avatar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:border_color="#0FFF"
            app:border_width="0dp"
            app:shadow="false" />
        <TextView
            android:id="@+id/account_textview_username"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_above="@+id/account_textview_email"
            android:paddingLeft="16dp"
            android:gravity="bottom"
            android:textSize="@dimen/text_size_subhead"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/account_textview_email"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="16dp"
            android:gravity="top"
            android:textSize="@dimen/text_size_body1"
            android:textColor="#FFFFFF"/>
        </RelativeLayout>

    <ListView
        android:id="@+id/navigation_drawer_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/left_drawer_account_container"
        android:layout_marginTop="8dp"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent" />

</RelativeLayout>
