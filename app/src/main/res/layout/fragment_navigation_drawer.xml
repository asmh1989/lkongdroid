<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?theme_navigation_drawer_bg"
    android:orientation="vertical"
    tools:context=".NavigationDrawerFragment">

    <FrameLayout
        android:id="@+id/left_drawer_account_container"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="?attr/theme_navigation_drawer_top_drawable" />

    <ListView
        android:id="@+id/navigation_drawer_listview"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_below="@+id/left_drawer_account_container"
        android:layout_marginTop="8dp"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent" />

</RelativeLayout>
