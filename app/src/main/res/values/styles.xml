<resources>
    <style name="FrameworkRoot.Light" parent="MaterialDrawerTheme.Light.DarkToolbar" />
    <style name="FrameworkRoot.Dark" parent="MaterialDrawerTheme" />

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <item name="ate_key">light_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimaryLightDefault</item>
        <item name="colorAccent">@color/colorAccentLightDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ate_key">light_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimaryLightDefault</item>
        <item name="colorAccent">@color/colorAccentLightDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppThemeDark.ActionBar" parent="Theme.AppCompat">
        <item name="ate_key">dark_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimaryLightDefault</item>
        <item name="colorAccent">@color/colorAccentLightDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="ate_key">dark_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimaryDarkDefault</item>
        <item name="colorAccent">@color/colorAccentDarkDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AppTheme.NoTranslucent">
        <item name="ate_key">light_theme</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="ate_key">light_theme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppThemeDark.NoTranslucent">
        <item name="ate_key">dark_theme</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AppThemeDark.Translucent">
        <item name="ate_key">dark_theme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>
</resources>
