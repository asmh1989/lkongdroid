<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="LKongDroidTheme.Light" parent="FrameworkRoot.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarInsetStart">@dimen/keyline_2_minus_16dp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="theme_toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme_navigation_drawer_bg">@color/theme_navigation_drawer_bg_light</item>
        <item name="theme_navigation_drawer_top_drawable">@drawable/drawer_top_image_light</item>
        <item name="theme_navigation_drawer_text_color">@android:color/black</item>
        <item name="theme_navigation_drawer_icon_color">@android:color/darker_gray</item>

        <item name="theme_float_label_layout_text_appearence">@style/TextAppearance.LKongDroid.FloatLabel.Light</item>
        <item name="theme_float_label_layout_selector">@color/float_label_selector_light</item>
        <item name="theme_card_bg_color">#FFFFFF</item>

        <item name="theme_text_color_primary">@color/text_color_primary</item>
        <item name="theme_text_color_secondary">@color/text_color_secondary</item>

        <item name="theme_arrow_backward_drawable">@drawable/ic_arrow_back_black</item>
        <item name="theme_arrow_forward_drawable">@drawable/ic_arrow_forward_black</item>
    </style>
</resources>
